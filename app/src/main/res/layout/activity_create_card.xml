<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCardActivity"
    android:background="#000">


    <TextView android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Create Savings Card"
        android:textColor="#fff"
        android:fontFamily="@font/poppins"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/imagebutton_round_corner"
        android:onClick="backClicked"
        android:src="@drawable/ic_back"
        app:tint="@drawable/item_selector">

    </ImageButton>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/back"
        android:layout_margin="15dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Card Name"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#fff"
            android:layout_gravity="center">

        </TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextTextCardName"
            android:background="@drawable/round_corner"
            android:textColor="#fff"

            />


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Number"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

        </TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextTextCardNumber"
            android:background="@drawable/round_corner"
            android:textColor="#fff"
            />


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expire Date"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

        </TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextTextCardDate"
            android:background="@drawable/round_corner"
            android:textColor="#fff"
            />
        <Button
            android:layout_marginTop="17dp"
            android:text="Link Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_gravity="center"

            />


    </LinearLayout>



</RelativeLayout>